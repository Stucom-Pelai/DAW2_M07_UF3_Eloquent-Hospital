<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:tns="http://hospital.hms.com/service"
    targetNamespace="http://hospital.hms.com/service"
    name="PatientsService">
    <wsdl:documentation>
        Definition for a SOAP web service for hospital hms
    </wsdl:documentation>
    <wsdl:types>
        <xsd:schema xmlns="http://www.w3.org/2001/XMLSchema">
            <xsd:import namespace="http://hospital.hms.com/service" schemaLocation="Hospital.xsd"/> 
            <!-- Patient data -->
            <xsd:element name="getPatient">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="patientId" type="xsd:int"/>                        
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
            <xsd:element name="getPatientResponse">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="patient" type="tns:Patient"/>
                        <!-- Add other elements as needed -->
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
        </xsd:schema>
    </wsdl:types>
    
    <!--A wsdl message element is used to define a message exchanged between a web service-->    
    <wsdl:message name="getPatient">
        <wsdl:part name="parameters" element="getPatient"/>
    </wsdl:message>    
    <wsdl:message name="getPatientResponse">
        <wsdl:part name="parameters" element="getPatientResponse"/>
    </wsdl:message>    
    
    <!--A wsdl port type is used to combine multiple messages(input, output) into a single operation-->
    <wsdl:portType name="PatientsPortType">       
        <wsdl:operation name="getPatient">
            <wsdl:input message="tns:getPatient"/>
            <wsdl:output message="tns:getPatientResponse"/>
        </wsdl:operation>
    </wsdl:portType>
    
    <!--A binding element defines exactly how each operation will take place over the network-->
    <wsdl:binding name="PatientsBinding" type="tns:PatientsPortType">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>       
        <wsdl:operation name="getPatient">
            <soap:operation soapAction="http://hospital.example.com/getPatient"/>
            <wsdl:input>
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>
    
    <!--A service element finally says where the service can be accesd from, the endpoint-->
    <wsdl:service name="PatientsService">
        <wsdl:port name="PatientsPort" binding="tns:PatientsBinding">
            <soap:address location="http://hospital.example.com/api/soap/patients-service"/>
        </wsdl:port>
    </wsdl:service>
</wsdl:definitions>